<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Reset Password</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/login/reset" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="newpassword" placeholder="new password">
                </div>
                <div class="form-group">
                    <input class="form-control" id="otp" type="password" name="otp" placeholder="OTP">
                </div>
                <div class="form-group" style="display:none;">
                    <input class="form-control" type="text" name="sentotp" value="<%= sentotp %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>